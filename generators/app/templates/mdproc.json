{
	"target_dir": "out",
	"default_formats": [ "html" ],
	"markdown_files": [
		"README.md",
		"src/*.md"
	],
	"main": "index",
	"md2html_options": {
		"theme": "<%= htmlTheme.toLowerCase() %>"
	},
	"md2docx_options": { },
<% if (supportPdf) { %>	"md2pdf_options": {
		"vars": {
			"fontsize": "11pt",
			"papersize": "a4paper",
			"linkColor": "ForestGreen",
			"classoption": [],
			"header-includes": [ "\\pagestyle{headings}" ]
		}
	},
<% } %>	"image_files": [
		"src/img/*",
		"src/img-gen/*"
	],
	"watched_files": [
		"README.md",
		"src/**/*.md"
	]
}
