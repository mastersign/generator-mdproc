{
	"target_dir": "out",
	"default_formats": [ "html" ],
	"markdown_files": [
		"README.md",
		"src/*.md"
	],
	"main": "index",
	"md2html_options": {
		"theme": "<%= htmlTheme ? htmlTheme.toLowerCase() : 'default' %>"
	},
	"md2docx_options": { },
<% if (supportPdf) { %>	"md2pdf_options": {
		"vars": {
			"fontsize": "11pt",
			"mainfont": "Segoe UI",
			"sansfont": "Segoe UI Light",
			"monofont": "Consolas",
			"papersize": "a4paper",
			"geometry": [
				"left=2.5cm",
				"right=2.5cm",
				"top=1.5cm",
				"bottom=1cm",
				"includehead",
				"includefoot"
			],
			"long-toc": "",
			"fancy-headline": "1",
			"linkColor": "ForestGreen",
			"classoption": [],
			"header-includes": [ "\\pagestyle{headings}" ]
		}
	},
<% } %>	"image_files": [
		"src/img/*",
		"src/img-gen/*"
	],
	"watched_files": [
		"README.md",
		"src/**/*.md"
	],
	"server_port": 3000,
	"livereload_port": 35730,
	"default_browser": null
}
