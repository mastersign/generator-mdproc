{
	"target_dir": "out",
	"default_formats": [ "html" ],
	"markdown_files": [
		"src/*.md"
	],
	"main": "index",
	"options": {
		"debug": false,
<% if (supportCitation) { %>		"citations": true,
		"bibliography": [
			"src/references.bib"
		],
		"citation_style": "res/acm-sigchi-proceedings.csl"
<% } %>	},
	"md2html_options": {
		"theme": "<%= htmlTheme ? htmlTheme.toLowerCase() : 'default' %>",
		"figure_term": "Figure"
	},
	"md2docx_options": {
		"template": null,
		"figure_term": "Figure"
	},
<% if (supportPdf) { %>	"md2pdf_options": {
		"template": null,
		"vars": {
			"fontsize": "11pt",
<% if (platformPdfFonts && process.platform == 'win32') { %>			"mainfont": "Segoe UI",
			"sansfont": "Segoe UI Light",
			"monofont": "Consolas",
<% } if (platformPdfFonts && process.platform == 'linux') { %>			"mainfont": "Liberation Serif",
			"sansfont": "Liberation Sans",
			"monofont": "Liberation Mono",
<% } if (platformPdfFonts && process.platform == 'darwin') { %>			"mainfont": "Times",
			"sansfont": "Helvetica",
			"monofont": "Courier New",
<% } %>			"papersize": "a4paper",
			"geometry": [
				"left=2.5cm",
				"right=2.5cm",
				"top=1.5cm",
				"bottom=1cm",
				"includehead",
				"includefoot"
			],
			"long-toc": "",
			"fancy-headline": "1",
			"classoption": [],
			"header-includes": [ "\\pagestyle{headings}" ]
		}
	},
<% } %>	"image_files": [
		"src/img/*",
		"src/img-gen/*"
	],
	"watched_files": [
		"config/mdproc.json",
		"config/graphs.json",
		"src/**/*.md"
	],
	"server_port": 3000,
	"livereload_port": 35730,
	"default_browser": null
}
