{
	"target_dir": "out",
	"default_formats": [ "html" ],
	"markdown_files": [
		"README.md",
		"src/*.md"
	],
	"main": "index",
	"md2html_options": {
		"theme": "<%= htmlTheme ? htmlTheme.toLowerCase() : 'default' %>"
	},
	"md2docx_options": { },
<% if (supportPdf) { %>	"md2pdf_options": {
		"vars": {
			"fontsize": "11pt",
			"mainfont": "Segoe UI",
			"sansfont": "Segoe UI Light",
			"monofont": "Consolas",
			"papersize": "a4paper",
			"page-geometry": {
				"left": "2.5cm",
				"right": "2.5cm",
				"top": "1.5cm",
				"bottom": "1cm",
				"twoside": false
			},
			"long-toc": false,
			"page-header": true,
			"linkColor": "ForestGreen",
			"classoption": [],
			"header-includes": [ "\\pagestyle{headings}" ]
		}
	},
<% } %>	"image_files": [
		"src/img/*",
		"src/img-gen/*"
	],
	"watched_files": [
		"README.md",
		"src/**/*.md"
	]
}
